@model IEnumerable<RAS.Bootcamp.mvc.Models.Entities.Pembeli>

@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewBag.Title = "index";
}

<h2 class = "center">Data Input</h2>

<table class="table">
    <tr>
        <th class="thead">
            @Html.DisplayNameFor(model => model.IdPembeli)
        </th>
        <th class="thead">
            @Html.DisplayNameFor(model => model.IdUser)
        </th>
        <th class="thead">
            @Html.DisplayNameFor(model => model.Nama)
        </th>
        <th class="thead">
            @Html.DisplayNameFor(model => model.No_HandPhone)
        </th>
         <th class="thead">
            @Html.DisplayNameFor(model => model.Alamat)
        </th>
        <th class="thead" class="text-align:center">
            Action
        </th>
    </tr>
    
  @foreach (var item in Model) {
      <tr>
          <td class="thead">
              @Html.DisplayFor(modelItem => item.IdPembeli)
          </td class="thead">
          <td class="thead">
              @Html.DisplayFor(modelItem => item.IdUser)
          </td>
          <td class="thead">
              @Html.DisplayFor(modelItem => item.Nama)
          </td>
          <td class="thead">
              @Html.DisplayFor(modelItem => item.No_HandPhone)
          </td>
          <td class="thead">
              @Html.DisplayFor(modelItem => item.Alamat)
          </td>
          <td>
              <a type="Update" class="btn btn-success" asp-route-id="@item.IdPembeli" asp-controller="Pembeli" asp-action="UpdatePembeli">Update</a>
              <a type="Delete" class="btn btn-danger" asp-route-id="@item.IdPembeli" asp-controller="Pembeli" asp-action="DeletePembeli">Delete</a>
          </td>
      </tr>       
  }

<td>
   <a class="btn btn-outline-primary" asp-controller="Pembeli" asp-action="CreatePembeli"><i class="far fa-plus-square"></i>Create</a>
</td>




</table>