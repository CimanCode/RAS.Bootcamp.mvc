@model RAS.Bootcamp.mvc.Models.Entities.Pembeli;

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-align: center">Form Pembeli</h1>
<form method="Post">
  <div class="form-group">
    <label for="exampleInputEmail1">Nama</label>
    <input type="text" class="form-control" id="Nama" aria-describedby="Nama" placeholder="Masukan Nama" asp-for="Nama">
    <small id="Nama" class="form-text text-muted">Tolong Masukan Nama Anda Disini!</small>
  </div>
  <div class="form-group">
    <label for="text">No HandPhone</label>
    <input type="text" class="form-control" id="No_HandPhone" placeholder="Masukan No.HandPhone" asp-for="No_HandPhone">
    <small id="No_HandPhone" class="form-text text-muted">Tolong Masukan No HandPhone Anda Disini!</small>
  </div>
  <div class="form-group">
    <label for="text">Alamat</label>
    <input type="text" class="form-control" id="Alamat" placeholder="Masukan Alamat" asp-for="Alamat">
    <small id="No_HandPhone" class="form-text text-muted">Tolong Masukan Alamat Anda Disini!</small>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>
